{%- if project.path -%}
  {%- assign path = project.path -%}
{% else %}
  {%- assign path = page.path -%}
{%- endif -%}
<img src="/assets/projects/{{ path | split:"/" | last | split:"." | first }}/{{ include.content.href }}" 
  alt="{{ include.content.alt }}"
  {% if include.content.height %}height="{{ include.content.height }}"{% endif %}
  {% if include.content.height %}width="{{ include.content.height }}"{% endif %}>
