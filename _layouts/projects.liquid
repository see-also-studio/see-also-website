    title="{{ project.title }}" 
    data-tags="{% include project_tags.liquid %}"
    style="--left: {% include random.liquid min=1 max=100 %}; --top: {% include random.liquid min=1 max=100 %}; --project-color: {% include projects_color.liquid content=project.color %}">
    <a href="{{ project.url }}">
      {% if project.featured %}
        {% if project.featured.type == "video" %}
          <!-- Video -->
        {% else %}
          <!-- -->
        {% endif %}
      {% else %}
      <!-- {{ project.title }} -->
      {% endif %}
    </a>
  </li>
  {% endfor %}
</ul>
